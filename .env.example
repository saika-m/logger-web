# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/analytics_tracker
USE_REPLICA_SET=false
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=5

# Authentication
JWT_SECRET=meow
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Tracking Configuration
ENABLE_IP_TRACKING=true
ANONYMIZE_IP=true
TRACKING_BATCH_SIZE=10
TRACKING_FLUSH_INTERVAL=5000
SESSION_TIMEOUT=1800000

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
ENABLE_REALTIME_ANALYTICS=true
ANALYTICS_AGGREGATION_INTERVAL=3600000

# Cache Configuration
CACHE_DRIVER=memory
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_HSTS=false
ENABLE_CSP=true
XSS_FILTER=true
MAX_REQUEST_SIZE=10mb

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGGING=true

# Error Reporting
ENABLE_ERROR_REPORTING=false
ERROR_REPORTING_SERVICE=
ERROR_REPORTING_DSN=

# API Configuration
API_VERSION=v1
API_PREFIX=/api